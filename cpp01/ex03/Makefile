CPP = c++

CPPFLAGS= -Wall -Werror -Wextra

CSRCS = main.cpp \
		Weapon.cpp \
		HumanA.cpp \
		HumanB.cpp \

OBJ = $(CSRCS:.cpp=.o)

NAME = weapon

$(NAME): $(OBJ)
	$(CPP) $(CPPFLAGS) $(OBJ) -o $(NAME)

all : ${NAME}

clean :
	rm -f $(OBJ)

fclean : clean
	rm -f $(NAME)

re : fclean all
