CPP = c++

CPPFLAGS= -Wall -Werror -Wextra -std=c++98 -fsanitize=address -g3

CSRCS = Zombie.cpp \
		zombieHorde.cpp \
		main.cpp

OBJ = $(CSRCS:.cpp=.o)

NAME = zombieHorde

$(NAME): $(OBJ)
	$(CPP) $(CPPFLAGS) $(OBJ) -o $(NAME)

all : ${NAME}

clean :
	rm -f $(OBJ)

fclean : clean
	rm -f $(NAME)

re : fclean all
